{
    "name": "calendone",
    "version": "1.0.0",
    "description": "A calendar app for your daily record and objective management.",
    "main": "index.js",
    "license": "MIT",
    "private": true,
    "author": {
        "email": "xin_yuanming@163.com",
        "name": "shenlvmeng"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/shenlvmeng/calendone.git"
    },
    "homepage": "https://github.com/shenlvmeng/calendone",
    "build": {
        "productName": "Calendone",
        "appId": "com.example.calendone",
        "files": [
            "**/*"
        ],
        "directories": {
            "buildResources": "dist",
            "output": "build",
            "app": "dist"
        },
        "linux": {},
        "mac": {
            "target": "dmg",
            "icon": "icon.icns",
            "category": "public.app-category.lifestyle"
        },
        "publish": {
            "owner": "shenlvmeng",
            "provider": "github",
            "repo": "calendone"
        },
        "win": {
            "target": "portable",
            "icon": "icon.ico"
        }
    },
    "scripts": {
        "lint": "tslint --project .",
        "build-main": "webpack --config config/webpack.main.config.js",
        "build-renderer": "webpack --config config/webpack.renderer.config.js",
        "build": "cross-env NODE_ENV=production yarn build-main && yarn build-renderer",
        "format": "prettier --write **/*.ts && tslint -p . --fix",
        "dev": "cross-env NODE_ENV=development yarn build-main && (yarn dev-server | electron ./dist/main)",
        "dev-server": "cross-env NODE_ENV=development webpack-dev-server --mode=development --config config/dev/webpack.renderer.config --hot --inline",
        "start": "yarn dev",
        "pack": "electron-builder --dir",
        "dist": "electron-builder",
        "release": "yarn build && yarn dist",
        "draft": "electron-builder -p always --draft --mac --win --linux --ia32 --x64",
        "postinstall": "electron-builder install-app-deps"
    },
    "lint-staged": {
        "src/**/*.{ts,tsx}": [
            "prettier --write",
            "tslint --fix",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "dependencies": {
        "dexie": "^2.0.4",
        "electron": "^4.0.2",
        "electron-devtools-installer": "^2.2.4",
        "electron-is-dev": "^1.0.1",
        "electron-updater": "^4.0.5",
        "moment": "^2.24.0",
        "rc-calendar": "^9.12.4",
        "rc-dialog": "^7.3.1",
        "rc-drawer": "^1.7.7",
        "rc-notification": "^3.3.1",
        "rc-switch": "^1.9.0",
        "rc-tabs": "^9.6.3",
        "react": "^16.8.6",
        "react-dom": "^16.6.3",
        "react-hot-loader": "^4.3.12",
        "react-router": "^4.3.1",
        "react-router-dom": "^4.3.1"
    },
    "devDependencies": {
        "@babel/core": "^7.2.0",
        "@types/classnames": "^2.2.6",
        "@types/electron-devtools-installer": "^2.2.0",
        "@types/lodash": "^4.14.119",
        "@types/node": "^10.12.18",
        "@types/rc-tooltip": "^3.7.0",
        "@types/react": "^16.7.7",
        "@types/react-dom": "^16.0.10",
        "@types/react-redux": "^6.0.10",
        "@types/react-router": "^4.4.1",
        "@types/react-router-dom": "^4.3.1",
        "@types/sqlite3": "^3.1.3",
        "babel-loader": "^8.0.4",
        "classnames": "^2.2.6",
        "copy-webpack-plugin": "^5.0.3",
        "cross-env": "^5.2.0",
        "css-loader": "^1.0.1",
        "electron-builder": "^20.38.2",
        "electron-rebuild": "^1.8.2",
        "file-loader": "^3.0.1",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^1.2.0",
        "immer": "^2.1.5",
        "less": "^3.8.1",
        "less-loader": "^4.1.0",
        "lint-staged": "^8.1.0",
        "lodash": "^4.17.11",
        "prettier": "^1.15.2",
        "style-loader": "^0.23.1",
        "terser-webpack-plugin": "^1.1.0",
        "ts-loader": "^4.0.0",
        "tslint": "^5.11.0",
        "tslint-config-airbnb": "^5.11.1",
        "tslint-config-prettier": "^1.17.0",
        "tslint-react": "^3.6.0",
        "typescript": "^3.2.1",
        "url-loader": "^1.1.2",
        "webpack": "^4.26.0",
        "webpack-cli": "^3.1.2",
        "webpack-dev-server": "^3.1.10",
        "webpack-merge": "^4.1.4",
        "webpack-node-externals": "^1.7.2"
    }
}
